{
  "expo": {
    "name": "LifeList",
    "slug": "lifelist",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/lifelist-icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/lifelist-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow LifeList to access your camera",
          "microphonePermission": "Allow LifeList to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ]
  }
}
